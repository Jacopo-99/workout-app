<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Workout Categories</title>
  <style>
    .category-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }

    .category-card {
      width: 200px;
      text-align: center;
      text-decoration: none;
      color: black;
      border: 1px solid #ccc;
      border-radius: 10px;
      overflow: hidden;
      transition: transform 0.2s ease;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .category-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
    }

    .category-card:hover {
      transform: scale(1.05);
    }
  </style>
</head>
<body>
  <h1 style="text-align:center;">Workout Categories</h1>
<div style="text-align: center; margin-bottom: 30px;">
  <a href="/workouts/new" style="
    display: inline-block;
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    transition: background-color 0.2s ease;
  " onmouseover="this.style.backgroundColor='#45a049'" onmouseout="this.style.backgroundColor='#4CAF50'">
    ➕ Add Workout
  </a>
</div>

  <div class="category-grid">
    <% const categories = [
      { name: 'Full Body', slug: 'full_body', image: '/images/workouts/full_body.jpg' },
      { name: 'Upper Body', slug: 'upper_body', image: '/images/workouts/upper_body.jpg' },
      { name: 'Lower Body', slug: 'lower_body', image: '/images/workouts/lower_body.jpg' },
      { name: 'Abs', slug: 'abs', image: '/images/workouts/abs.jpg' },
      { name: 'Yoga', slug: 'yoga', image: '/images/workouts/yoga.jpg' }
    ]; %>

    <% categories.forEach(cat => { %>
      <a href="/workouts/category/<%= cat.slug %>" class="category-card">
        <img src="<%= cat.image %>" alt="<%= cat.name %>">
        <h3><%= cat.name %></h3>
      </a>
    <% }) %>
  </div>
  <div style="text-align: center; margin-top: 30px;">
  <a href="/" style="
    display: inline-block;
    padding: 12px 24px;
    background-color: #28a745;
    color: white;
    text-decoration: none;
    font-weight: bold;
    border-radius: 6px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    transition: background-color 0.2s ease;
  " onmouseover="this.style.backgroundColor='#218838'" onmouseout="this.style.backgroundColor='#28a745'">
    ⬅️ Back to Home
  </a>
</div>

</body>
</html>
