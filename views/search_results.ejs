<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Search Results</title>
  <style>
    .exercise-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
      padding: 20px;
    }

    .exercise-card {
      width: 200px;
      border: 1px solid #ccc;
      padding: 15px;
      border-radius: 8px;
      text-align: center;
      position: relative;
    }

    .exercise-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
    }

    .add-form {
      margin-top: 10px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 5px;
    }

    .add-form select {
      width: 100%;
    }

    .add-form button {
      font-size: 16px;
      padding: 2px 6px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1 style="text-align:center;">Search Results</h1>
<div style="text-align: center; margin-bottom: 30px;">
  <a href="/workouts/new" style="
    display: inline-block;
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    transition: background-color 0.2s ease;
  " onmouseover="this.style.backgroundColor='#45a049'" onmouseout="this.style.backgroundColor='#4CAF50'">
    ➕ Add Workout
  </a>
</div>
  <div class="exercise-grid">
    <% exercises.forEach(ex => { %>
      <div class="exercise-card">
        <% if (ex.thumbnail && ex.thumbnail !== 'null') { %>
          <a href="/exercises/<%= ex.id %>">
            <img src="<%= ex.thumbnail %>" alt="<%= ex.name %>">
          </a>
        <% } %>
        <strong><%= ex.name %></strong>
        <p><%= ex.description %></p>

        <form class="add-form" action="/workouts/add-exercise" method="POST">
          <input type="hidden" name="exercise_id" value="<%= ex.id %>">
          <select name="workout_id" required>
            <% workouts.forEach(w => { %>
              <option value="<%= w.id %>"><%= w.name %></option>
            <% }) %>
          </select>
          <button type="submit" title="Add to Workout">➕</button>
        </form>
      </div>
    <% }) %>
  </div>
    <div style="text-align: center; margin-top: 30px;">
  <a href="/exercises" style="
    display: inline-block;
    padding: 12px 24px;
    background-color: #28a745;
    color: white;
    text-decoration: none;
    font-weight: bold;
    border-radius: 6px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    transition: background-color 0.2s ease;
  " onmouseover="this.style.backgroundColor='#218838'" onmouseout="this.style.backgroundColor='#28a745'">
    ⬅️ Back to Exercise
  </a>
</div>
</body>
</html>

